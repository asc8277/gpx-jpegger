{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "semi": ["error", "always"]
    },
    "overrides": [
        {
            "files": ["*.js", "*.html"]
        }
    ],
    "globals": {
        "L": "readonly"
    }
}
